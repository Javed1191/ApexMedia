<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimaryDark"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <com.custom.baselibrary.CustomText
                android:id="@+id/tv_action_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="fonts/OmnesMed.ttf"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:id="@+id/lay_job_feed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone">

                <com.custom.baselibrary.CustomText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="fonts/OmnesMed.ttf"
                    android:text="Create Your Proposal"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.custom.baselibrary.CustomText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="fonts/OmnesMed.ttf"
                    android:text="Don't include contact info [?]"
                    android:textColor="@color/colorPrimary" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.custom.baselibrary.CustomText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="fonts/OmnesMed.ttf"
                    android:text="First Name"
                    android:textColor="#FFFFFF"
                    android:visibility="gone" />

                <com.custom.baselibrary.CustomEditText
                    android:id="@+id/edt_job_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="fonts/OmnesMed.ttf"
                    android:hint="Job Name"
                    android:inputType="textCapWords"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:windowSoftInputMode="adjustPan" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary" />

                <com.custom.baselibrary.CustomText
                    android:id="@+id/tv_first_name_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="fonts/OmnesMed.ttf"
                    android:text="Enter First Name"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"

                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.custom.baselibrary.CustomText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="fonts/OmnesMed.ttf"
                    android:text="First Name"
                    android:textColor="#FFFFFF"
                    android:visibility="gone" />

                <com.custom.baselibrary.CustomEditText
                    android:id="@+id/edt_job_decs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="fonts/OmnesMed.ttf"
                    android:hint="Description"
                    android:inputType="textCapWords"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:windowSoftInputMode="adjustPan" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_upload1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/upload" />

                    <com.custom.baselibrary.CustomText
                        android:id="@+id/tv_file1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="fonts/OmnesMed.ttf"
                        android:text="No file choosen"
                        android:textColor="@color/colorPrimary" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"

                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <AutoCompleteTextView
                        android:id="@+id/auto_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/down_arrow_dark"
                        android:hint="Select Category" />

                    <AutoCompleteTextView
                        android:id="@+id/auto_sub_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:drawableRight="@drawable/down_arrow_dark"
                        android:hint="Select Sub Category" />

                </LinearLayout>

                <com.custom.baselibrary.CustomEditText
                    android:id="@+id/edt_skills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="fonts/OmnesMed.ttf"
                    android:hint="Skills"
                    android:inputType="textCapWords"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:windowSoftInputMode="adjustPan" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"

                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.custom.baselibrary.CustomText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="fonts/OmnesMed.ttf"
                    android:text="Set Work Arrangement"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <AutoCompleteTextView
                    android:id="@+id/auto_work_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/down_arrow_dark"
                    android:hint="Select Work Type" />

                <LinearLayout
                    android:id="@+id/lay_work_arrangment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <AutoCompleteTextView
                        android:id="@+id/auto_work_type_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:drawableRight="@drawable/down_arrow_dark"
                        android:hint="Select Work Rate" />

                    <Spinner
                        android:id="@+id/spn_hr_week"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="gone" />

                    <com.custom.baselibrary.CustomEditText
                        android:id="@+id/edt_hourly_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="fonts/OmnesMed.ttf"
                        android:hint="Hours/Week"
                        android:inputType="number"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:windowSoftInputMode="adjustPan" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary" />

                    <AutoCompleteTextView
                        android:id="@+id/auto_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:drawableRight="@drawable/down_arrow_dark"
                        android:hint="Select Work Duration" />

                </LinearLayout>

                <com.custom.baselibrary.CustomEditText
                    android:visibility="gone"
                    android:id="@+id/edt_budget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="fonts/OmnesMed.ttf"
                    android:hint="Budget in $"
                    android:inputType="number"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="#b7b3b3"
                    android:windowSoftInputMode="adjustPan" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"

                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.custom.baselibrary.CustomText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="fonts/OmnesMed.ttf"
                    android:text="Job Posting Visibility"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rdo_grp_public_private"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rdo_btn_public"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Public: Visible to everyone within apex media community." />

                    <RadioButton
                        android:id="@+id/rdo_btn_private"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Private: Do not show on Apex Media jobs list. Only candidates I invite can respond." />
                </RadioGroup>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"

                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.custom.baselibrary.CustomText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="fonts/OmnesMed.ttf"
                    android:text="Proposed Start Date"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rdo_grp_propose_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rdo_btn_immediately"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start immediately after proposal is selected" />

                    <RadioButton
                        android:id="@+id/rdo_btn_scheduled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Job will start on scheduled date" />
                </RadioGroup>


            </LinearLayout>

            <com.custom.baselibrary.CustomButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_btn_next"
                android:fontFamily="fonts/OmnesMed.ttf"
                android:text="Submit"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
