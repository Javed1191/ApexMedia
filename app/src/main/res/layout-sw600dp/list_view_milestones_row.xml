<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView

        android:id="@+id/card_produst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="3dp"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/lay_view_milstones"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.custom.baselibrary.CustomText
                android:id="@+id/tv_amounnt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="fonts/OmnesMed.ttf"
                android:text="$420"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <com.custom.baselibrary.CustomText
                android:id="@+id/tv_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="fonts/OmnesMed.ttf"
                android:text="completed"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <com.custom.baselibrary.CustomText
                android:id="@+id/tv_pay_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="fonts/OmnesMed.ttf"
                android:text="12/02/2016"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <com.custom.baselibrary.CustomButton
                android:id="@+id/btn_pay"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/custom_btn_next"
                android:fontFamily="fonts/OmnesMed.ttf"
                android:text="Invoice"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/img_action"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/edit_profile_32_orange" />


        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>