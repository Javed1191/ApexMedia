<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView

        android:id="@+id/card_produst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/lay_job_feed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_user"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/menu_retok" />

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.custom.baselibrary.CustomText
                                android:id="@+id/tv_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="fonts/OmnesMed.ttf"
                                android:text="Vijay Kumar"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="17dp"
                                android:textStyle="bold" />

                            <com.custom.baselibrary.CustomText
                                android:id="@+id/tv_posted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="fonts/OmnesMed.ttf"
                                android:text="Posted: 12/12/2016"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold" />


                            <com.custom.baselibrary.CustomText
                                android:id="@+id/tv_contactor_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="fonts/OmnesMed.ttf"
                                android:text="Client Info: "
                                android:textColor="@color/colorPrimary"
                                android:textSize="15dp"
                                android:textStyle="bold" />


                            <com.custom.baselibrary.CustomText
                                android:id="@+id/tv_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="fonts/OmnesMed.ttf"
                                android:text=""
                                android:textColor="@color/colorPrimary"
                                android:textSize="15dp" />


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <com.custom.baselibrary.CustomButton
                            android:id="@+id/btn_bid_now"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@drawable/custom_btn_next"
                            android:fontFamily="fonts/OmnesMed.ttf"
                            android:text="Bid Now"
                            android:textColor="#FFFFFF" />

                        <com.custom.baselibrary.CustomButton
                            android:id="@+id/btn_decline"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/custom_btn_add"
                            android:fontFamily="fonts/OmnesMed.ttf"
                            android:text="Decline"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>