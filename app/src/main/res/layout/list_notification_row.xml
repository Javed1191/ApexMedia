<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <android.support.v7.widget.CardView

        android:id="@+id/card_produst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/lay_view_milstones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <com.custom.baselibrary.CustomText
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="fonts/OmnesMed.ttf"
                android:text="11/01/2017"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                />

            <com.apexmediatechnologies.apexmedia.RoundedImageView
                android:id="@+id/img_user_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/apex_launcher"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_user_image"
                android:orientation="vertical"
                android:padding="5dp">

                <com.custom.baselibrary.CustomText
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="fonts/OmnesMed.ttf"
                    android:text="title"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />

                <com.custom.baselibrary.CustomText
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="fonts/OmnesMed.ttf"
                    android:text="completed"
                    android:textColor="@color/colorPrimary"
                    />
            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>