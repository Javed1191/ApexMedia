<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView

        android:id="@+id/card_produst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:id="@+id/lay_view_payment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.custom.baselibrary.CustomText
                android:id="@+id/tv_project"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:fontFamily="fonts/OmnesMed.ttf"
                android:text="Demo Project"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <com.custom.baselibrary.CustomText
                android:id="@+id/tv_amounnt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:fontFamily="fonts/OmnesMed.ttf"
                android:text="$420"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <com.custom.baselibrary.CustomText
                android:id="@+id/tv_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="fonts/OmnesMed.ttf"
                android:text="completed"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <com.custom.baselibrary.CustomText
                android:id="@+id/tv_pay_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:fontFamily="fonts/OmnesMed.ttf"
                android:text="12/02/2016"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <com.custom.baselibrary.CustomText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/custom_text_replay"
                android:fontFamily="fonts/OmnesMed.ttf"
                android:padding="5dp"
                android:text="Paid"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:visibility="gone" />

            <com.custom.baselibrary.CustomButton
                android:id="@+id/btn_pay"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_btn_next"
                android:fontFamily="fonts/OmnesMed.ttf"
                android:text="Pay Now"
                android:textColor="#FFFFFF"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_action"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/dash_message"
                android:visibility="gone" />


        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>